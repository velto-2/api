# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@ajeerpay.com

# SMS
SMS_PROVIDER=unifonic
UNIFONIC_APP_SID=
UNIFONIC_SENDER_ID=

# Logging
LOG_LEVEL=debug