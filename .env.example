# ============================================
# REQUIRED ENVIRONMENT VARIABLES
# ============================================

# Database
MONGODB_URI=mongodb://localhost:27017/velto

# JWT Authentication (REQUIRED - Generate strong secrets for production)
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-change-in-production

# Encryption Key (REQUIRED - Must be 32 bytes hex string, 64 hex characters)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-64-characters-long-change-in-production

# ============================================
# OPTIONAL ENVIRONMENT VARIABLES (with defaults)
# ============================================

# App Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=v1
LOG_LEVEL=debug

# JWT Expiration
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Redis Configuration (if using Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Database Seeding (optional - for initial admin user)
SEED_ADMIN_EMAIL=admin@velto.ai
SEED_ADMIN_PASSWORD=Admin123!

# ============================================
# TELEPHONY PROVIDER CONFIGURATION
# ============================================

# Telephony Provider Selection: 'twilio' or 'vonage'
TELEPHONY_PROVIDER=twilio

# Twilio Configuration (if using Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_BASE_URL=http://localhost:3000
TWILIO_SIMULATE_CALLS=false

# Vonage Configuration (if using Vonage)
VONAGE_API_KEY=your_vonage_api_key
VONAGE_API_SECRET=your_vonage_api_secret
VONAGE_PHONE_NUMBER=+1234567890
VONAGE_APPLICATION_ID=your_vonage_application_id
VONAGE_WEBHOOK_BASE_URL=http://localhost:3000
VONAGE_SIMULATE_CALLS=false

# ============================================
# AI/ML PROVIDER CONFIGURATION
# ============================================

# Cloudflare (for LLM and STT via Whisper)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_BASE_URL=https://api.cloudflare.com/client/v4

# HuggingFace (for STT and LLM - Arabic uses wav2vec2 for STT, Falcon for LLM)
HUGGINGFACE_API_KEY=your_huggingface_api_key
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co/models
# Note: For LLM, you can use models like:
# - tiiuae/falcon-7b-instruct
# - tiiuae/falcon-40b-instruct
# - tiiuae/falcon-180b-chat

# ElevenLabs (for TTS - Text-to-Speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_BASE_URL=https://api.elevenlabs.io/v1
ELEVENLABS_VOICE_ID=your_voice_id

# ============================================
# STORAGE CONFIGURATION
# ============================================

# AWS S3 (if using S3 for storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=me-south-1

# ============================================
# PAYMENT CONFIGURATION
# ============================================

# Moyasar Payment Gateway
MOYASAR_API_KEY=your_moyasar_api_key
MOYASAR_PUBLISHABLE_KEY=your_moyasar_publishable_key
MOYASAR_WEBHOOK_SECRET=your_moyasar_webhook_secret
