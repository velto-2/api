# Application
NODE_ENV=development
PORT=3000
API_PREFIX=v1

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ajeerpay"
SHADOW_DATABASE_URL="postgresql://user:password@localhost:5432/ajeerpay_shadow"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRATION=7d

# Encryption
ENCRYPTION_KEY=your-32-byte-hex-key-for-aes-256

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
